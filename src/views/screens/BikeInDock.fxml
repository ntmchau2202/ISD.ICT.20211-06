<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="121.0" prefWidth="442.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="bikeImage" fitHeight="100.0" fitWidth="100.0" layoutX="28.0" layoutY="25.0" pickOnBounds="true">
            <image>
                <Image url="@../images/data/electric-bike.jpg" />
            </image>
        </ImageView>
        <Label fx:id="bikeName" layoutX="144.0" layoutY="41.0" text="Electric bike 1236">
            <font>
                <Font name="Segoe UI Bold Italic" size="18.0" />
            </font>
        </Label>
        <Label layoutX="144.0" layoutY="66.0" text="Battery:">
            <font>
                <Font name="Segoe UI Bold Italic" size="16.0" />
            </font>
        </Label>
      <Label fx:id="bikeBattery" layoutX="215.0" layoutY="66.0" text="100%">
         <font>
            <Font name="Segoe UI" size="16.0" />
         </font>
      </Label>
        <Label layoutX="144.0" layoutY="91.0" text="Distance estimation:">
            <font>
                <Font name="Segoe UI Bold Italic" size="16.0" />
            </font>
        </Label>
      <Label fx:id="distanceEstimation" layoutX="307.0" layoutY="91.0" prefHeight="19.0" prefWidth="60.0" text="100 km">
         <font>
            <Font name="Segoe UI" size="16.0" />
         </font>
      </Label>
      <Button fx:id="viewBikeButton" layoutX="321.0" layoutY="37.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="85.0" text="View bike" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
